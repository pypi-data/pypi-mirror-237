{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false,
            "args": [
                "tests",
                "-vv"
            ]
        },
        {
            "name": "pytest file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false,
            "args": [
                "${file}",
                "-vv"
            ]
        },
        {
            "name": "behave",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "justMyCode": false,
            "args": []
        },
        {
            "name": "python file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            }
        },
        {
            "name": "cog file",
            "type": "python",
            "request": "launch",
            "module": "cogapp",
            "justMyCode": false,
            "args": [
                "-I",
                ".cogapp/",
                "-D",
                "schema=schemas/example.yaml",
                "${file}"
            ],
            "jinja": true
        },
        {
            "name": "cog",
            "type": "python",
            "request": "launch",
            "module": "cogapp",
            "justMyCode": false,
            "args": [
                "-I",
                ".cogapp/",
                "@.cogapp/cogfile"
            ],
            "jinja": true
        },
        {
            "name": "DOIT",
            "type": "python",
            "request": "launch",
            "module": "doit",
            "justMyCode": false,
            "jinja": true
        },
        {
            "name": "Start Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                // env vars are pulled from .flaskenv file
            },
            "args": [
                "--app",
                "grail.app",
                "run",
                "--exclude-patterns",
                "/tmp/*", // needed if we build and launch apps in /tmp, otherwise main app will reload when we update generaetd code
                //  "--no-debugger",
                //  "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false
        },
    ]
}