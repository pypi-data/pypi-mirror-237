* {
  color: #555555;
}

QWidget {
  background-color: rgb(240, 240, 240);
}

QWidget:disabled {
  color: lightgray;
  border-color: lightgray;
}

QToolTip {
  background-color: rgb(240, 240, 240);
  color: #555555;
}

QMenuBar {
  border-bottom: 1px solid lightgray;
}

QMenuBar::item {
  padding: 7px;
}

QMenu::item {
  background-color: rgb(240, 240, 240);
}

QMenu::item:selected, QMenuBar::item:selected {
  color: white;
  background-color: dodgerblue;
}

QMenu {
  border: 1px solid lightgray;
}

::section {
  background-color: rgb(250, 250, 250);
}

QListView, QTableView, QTreeView {
  background-color: white;
  selection-color: #555555;
  selection-background-color: rgb(230, 239, 253);
}

QListView:disabled, QTableView:disabled, QTreeView:disabled {
  background-color: rgb(240, 240, 240);
  selection-color: lightgray;
  selection-background-color: rgb(230, 239, 253);
}

QHeaderView::section {
  border: 1px solid darkgray;
  border-top: none;
  border-left: none;
  padding-left: 4px;
  background-color: qlineargradient(
    x1:0, y1:0, x2:0, y2:1,
    stop:0 rgb(235, 235, 235),
    stop:1.0 rgb(220, 220, 220)
  );
}

QHeaderView::section:disabled {
  border: 1px solid darkgray;
  border-top: none;
  border-left: none;
  padding-left: 4px;
  background-color: qlineargradient(
    x1:0, y1:0, x2:0, y2:1,
    stop:0 rgb(240, 240, 240),
    stop:1.0 rgb(220, 220, 220)
  );
}

QHeaderView::section:hover {
  background-color: rgb(230, 240, 255);
}

QHeaderView::section:pressed {
  color: white;
  background-color: rgb(96, 159, 250);
}

QPushButton {
  border: 1px solid darkgray;
  padding: 4px;
}

QPushButton:default {
  background-color: rgb(79, 139, 200);
  color: white;
  font-weight: bold;
}

QPushButton:default:disabled {
  background-color: rgb(188, 200, 212);
  color: rgb(240, 240, 240);
  border: 1px solid lightgray;
}

QPushButton:default:hover {
  background-color: rgb(106, 170, 234);
}

QPushButton:hover {
  background-color: rgb(215, 230, 240);
}

QPushButton:pressed {
  background-color: rgb(190, 200, 205);
}

QProgressBar {
  background-color: white;
  border: 1px solid darkgray;
  text-align: center;
}

QProgressBar::chunk {
  background-color: rgb(182, 227, 255);
  width: 10px;
}

QCheckBox::indicator:disabled {
  background-color: rgb(250, 250, 250);
}

QComboBox {
  background-color: white;
  border: 1px solid darkgray;
  padding: 3px;
  selection-background-color: lightskyblue;
}

QComboBox:disabled {
  background-color: rgb(240, 240, 240);
  border: 1px solid lightgray;
}

QGroupBox {
  border: 1px solid darkgray;
  margin-top: 7px;
  padding-top: 7px;
}

QGroupBox:disabled {
  border: 1px solid lightgray;
}

QGroupBox::title {
  subcontrol-origin: margin;
  left: 10px;
  padding: 0 3px 0 3px;
}

QSpinBox {
  background-color: white;
  border-width: 4;
}

QPlainTextEdit, QTextEdit, QLineEdit {
  background-color: white;
  border: 1px solid darkgray;
}

QPlainTextEdit:disabled, QTextEdit:disabled, QLineEdit:disabled {
  background-color: rgb(240, 240, 240);
  border: 1px solid lightgray;
}

QTabWidget::pane {
  border: 1px solid darkgray;
}

QTabBar::tab {
  background-color: rgb(220, 220, 220);
  border: 1px solid darkgray;
  border-bottom: none;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  min-width: 14ex;
  padding: 4px;
}

QTabBar::tab:hover {
  background-color: rgb(215, 230, 240);
}

QTabBar::tab:pressed {
  background-color: rgb(190, 200, 205);
}

QTabBar::tab:selected {
  background-color: qlineargradient(
    x1:0, y1:0, x2:0, y2:1,
    stop:0 rgb(255, 255, 255),
    stop:1.0 rgb(224, 224, 224)
  );
}

QTabBar::tab:!selected {
  margin-top: 2px;
}

QStatusBar {
  border-top: 1px solid darkgray;
  min-height: 24px;
}

QScrollArea {
  border: none;
}

QScrollBar {
  background: transparent;
  border-radius: 5px;
}

QScrollBar:disabled {
  background: transparent;
  border-radius: 5px;
}

QScrollBar:horizontal {
  height: 10px;
}

QScrollBar:vertical {
  width: 10px;
}

QScrollBar::handle {
  background: lightgray;
  border-radius: 5px;
}

QScrollBar::handle:disabled {
  background: lightgray;
  border-radius: 5px;
}

QScrollBar::handle:horizontal {
  height: 25px;
  min-width: 10px;
}

QScrollBar::handle:vertical {
  width: 25px;
  min-height: 10px;
}

QScrollBar::add-line, QScrollBar::sub-line {
  border: none;
}

QScrollBar::add-page, QScrollBar::sub-page {
  background: transparent;
}

QAbstractScrollArea::corner {
  background: transparent;
}
